.eyecatch
  cursor pointer
  position relative
  height 780px
  // height 100vh
  // min-height 700px
  // max-height 1000px
  background-color $bgColor_eyecatch
  text-align center
  background url('../images/eyecatch_bg.jpg') no-repeat 50% 50%
  background-size cover
  overflow hidden

  &.is-draggable
    cursor col-resize

    .eyecatch__model
      z-index 1

    // .eyecatch__text
    //   opacity 0.7

  &__model
    pointer-events none
    position absolute
    width 926px
    height 800px
    left 50%
    top -5%
    transform translateX(-50%)
    opacity 0

    &Inner
      position relative
      width 100%
      height 100%
      overflow hidden

    &List
      position absolute
      top 0
      left 0
      line-height 0

      img
        width 100%
        height auto

  &__text
    pointer-events none
    color $textColor_eyecatch
    font-weight normal
    position absolute
    width 100%
    top 50%
    left 50%
    transform translate(-50%, -50%)
    margin 0

    > span
      text-align center
      line-height 1

    &Top
      display block
      font-style italic
      font-size rem(40px)

    &Middle
      font-weight bold
      display inline-block
      font-size rem(120px)
      margin-top 20px
      position relative

      &:after
        content ''
        position absolute
        left 0
        bottom -1px
        width 100%
        height 4px
        background-color $textColor_eyecatch

    &Bottom
      display block
      font-size rem(20px)
      margin-top 30px


  &__subText
    position absolute
    bottom 50px
    width 100%
    left 50%
    z-index 2
    transform translateX(-50%)

    a
      color $textColor_eyecatch
      font-size rem(25px)
      background none
      font-weight bold