.eyecatch
  position relative
  height 800px
  // height 100vh
  // min-height 700px
  // max-height 1000px
  background-color $bgColor_eyecatch
  text-align center
  background url('../images/eyecatch_bg.jpg') no-repeat 50% 50%
  background-size cover

  &__model
    position absolute
    left 50%
    top 0
    width 700px
    height 100%
    overflow hidden
    background-color #aaa
    transform translateX(-50%)

    &List
      list-style-type none
      margin 0
      padding-left 0
      position relative

      &Item
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        line-height 0
        opacity 0

        img
          width 100%
          height auto

  &__text
    color $textColor_eyecatch
    font-weight normal
    position absolute
    width 100%
    top 50%
    left 50%
    transform translate(-50%, -50%)
    margin 0

    > span
      text-align center
      line-height 1

    &Top
      display block
      font-style italic
      font-size rem(40px)

    &Middle
      font-weight bold
      display inline-block
      font-size rem(120px)
      margin-top 20px
      position relative

      &:after
        content ''
        position absolute
        left 0
        bottom -1px
        width 100%
        height 5px
        background-color $textColor_eyecatch

    &Bottom
      display block
      font-size rem(20px)
      margin-top 30px


  &__subText
    color $textColor_eyecatch
    position absolute
    bottom 60px
    width 100%
    left 50%
    transform translateX(-50%)
    font-size rem(25px)
    background none