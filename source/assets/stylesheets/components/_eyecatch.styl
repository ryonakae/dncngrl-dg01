.eyecatch
  position relative
  height 700px
  height 100vh
  min-height 700px
  max-height 1000px
  background-color $bgColor_eyecatch
  text-align center

  &__model
    position absolute
    left 50%
    top 0
    width 700px
    height 100%
    background-color #aaa
    transform translateX(-50%)

  &__text
    color $textColor_eyecatch
    position absolute
    width 100%
    top 50%
    left 50%
    transform translate(-50%, -50%)
    margin 0

    > span
      text-align center
      line-height 1

    &Top
      display block
      font-style italic
      font-size rem(40px)

    &Middle
      display inline-block
      font-size rem(120px)
      margin-top 20px
      position relative

      &:after
        content ''
        position absolute
        left 0
        bottom -1px
        width 100%
        height 5px
        background-color $textColor_eyecatch

    &Bottom
      display block
      font-size rem(20px)
      margin-top 30px


  &__subText
    color $textColor_eyecatch
    position absolute
    bottom 70px
    width 100%
    left 50%
    transform translateX(-50%)
    font-size rem(25px)