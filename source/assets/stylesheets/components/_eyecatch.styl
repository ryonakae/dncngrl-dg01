.eyecatch
  cursor pointer
  position relative
  height 780px
  // height 100vh
  // min-height 700px
  // max-height 1000px
  background-color $bgColor_eyecatch
  text-align center
  background url('../images/eyecatch_bg.jpg') no-repeat 50% 50%
  // background url('//file.brdr.jp/dncngrl_01/images/eyecatch_bg.jpg') no-repeat 50% 50%
  background-size cover
  overflow hidden


  &__loading
    &Loader,
    &Text
      display none
      color $textColor_eyecatch
      position absolute
      text-align center
      width 100%
      top 50%
      transform translateY(-50%)

    &Loader
      font-size rem(80px)
      font-style italic
      font-weight bold
      animation loading_flash 125ms linear infinite

    &Text
      font-size rem(120px)
      font-weight bold


  &__model
    pointer-events none
    position absolute
    width 926px
    height 800px
    left 50%
    margin-left (926px / -2)
    transform translate3d(0, -0.25%, 0)
    opacity 0

    &.is-animation
      animation model_floating 10s ease infinite

    &Inner
      position relative
      width 100%
      height 100%
      overflow hidden

    &List
      position absolute
      top 0
      left 0
      line-height 0

      img
        width 100%
        height auto


  &__text
    pointer-events none
    color $textColor_eyecatch
    font-weight normal
    position absolute
    width 100%
    top 50%
    transform translateY(-50%)
    margin 0
    opacity 0

    &Inner
      display inline-block
      vertical-align middle
      position relative

    &Top
    &Middle
    &Bottom
      text-align center
      line-height 1

    &Top
      display block
      font-style italic
      font-size rem(40px)

    &Middle
      font-weight bold
      display inline-block
      font-size rem(120px)
      margin-top 20px
      position relative

      &:after
        content ''
        position absolute
        left 0
        bottom -1px
        width 100%
        height 4px
        background-color $textColor_eyecatch

    &Bottom
      display block
      font-size rem(20px)
      margin-top 30px


  &__subText
    position absolute
    bottom 50px
    width 100%
    z-index 2
    opacity 0

    a
      color $textColor_eyecatch
      font-size rem(25px)
      background none
      font-weight bold


body.is-draggable
  .eyecatch
    cursor move

    &__model
      z-index 1
      animation-play-state paused

    &__text
      color transparent
      text-shadow 0px 0px 40px $textColor_eyecatch

      &Middle
        &:after
          background-color transparent
          box-shadow 0px 0px 60px $textColor_eyecatch


@keyframes model_floating
  0%
    transform translate3d(0, -0.25%, 0)
  50%
    transform translate3d(0, 0.75%, 0)
  100%
    transform translate3d(0, -0.25%, 0)


@keyframes loading_flash
  0%
    opacity 0.4
  49%
    opacity 0.4
  50%
    opacity 1
  99%
    opacity 1
  100%
    opacity 0.4