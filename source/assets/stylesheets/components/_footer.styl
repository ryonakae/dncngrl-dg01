.footer
  background-color $bgColor_footer
  height 100px
  position relative

  &__copyright
    position absolute
    left $padding_base
    top 50%
    transform translateY(-50%)

    &Title
      display inline-block
      width 170px
      height 40px
      hide-text()
      background url('../images/logo_footer.png') no-repeat
      background-size 170px 40px
      vertical-align middle

      +retina-query(only screen, 2)
        background-image url('../images/logo_footer-2x.png')

      &:hover
        opacity 0.7

    &Text
      display inline-block
      margin 0 0 0 15px
      color $textColor_footer
      font-size $fontSize_footer
      vertical-align middle

      a
        color $textColor_footer
        background none
        margin-left .5em

  &__share
    position absolute
    right $padding_base
    top 50%
    transform translateY(-50%)


+media-query($mq_tablet)
  .footer
    height 80px

    &__copyright
      left $padding_tablet

      &Title
        display none

      &Text
        margin-left 0

    &__share
      right $padding_tablet


+media-query($mq_smartphone)
  .footer
    height auto
    padding 20px $padding_smartphone
    text-align center

    &__copyright,
    &__share
      position static
      transform none

    &__share
      margin-top 10px
      line-height 0

      > .share
        display inline-block