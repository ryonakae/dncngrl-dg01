.footer
  background-color $bgColor_footer
  height 100px
  position relative

  &__copyright
    position absolute
    left 40px
    top 50%
    transform translateY(-50%)

    &Text
      display inline
      margin-left 15px
      color $textColor_footer
      font-size $fontSize_footer

      a
        color $textColor_footer
        background none

  &__share
    position absolute
    right 40px
    top 50%
    transform translateY(-50%)