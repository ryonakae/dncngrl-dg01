.credit
  padding 0 0 120px

  &__inner
    width $width_base
    margin 0 auto

  &__border
    margin 80px auto 70px
    width 100px
    height 2px
    background-color $borderColor_credit
    border none

  &__title
    font-size $fontSize_title
    text-align center
    margin 0


.credit__list
  margin 45px 0 0
  text-align center

  &Role
    font-size $fontSize_creditRole
    margin-top 40px

    &:first-child
      margin-top 0

  &Name
    margin 18px 25px 0
    display inline-block
    font-size $fontSize_creditName
    font-weight bold