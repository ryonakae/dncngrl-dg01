font-face( 'ProximaNova', '../fonts/ProximaNova-Regular', normal, normal, formats: eot woff )
font-face( 'ProximaNova', '../fonts/ProximaNova-Regular-Italic', normal, italic, formats: eot woff )
font-face( 'ProximaNova', '../fonts/ProximaNova-Semibold', bold, normal, formats: eot woff )
font-face( 'ProximaNova', '../fonts/ProximaNova-Semibold-Italic', bold, italic, formats: eot woff )
font-face( 'Noto Sans Japanese', '../fonts/NotoSansJP-Regular', normal, normal, formats: eot woff )

normalize()
box-sizing-reset()

body
  font-family 'ProximaNova', 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, Arial, 'Noto Sans Japanese', 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', 'メイリオ', Meiryo, sans-serif
  font-size $fontSize_default
  line-height $lineHeight_default
  letter-spacing $letterSpacing_default
  background-color $bgColor_default
  font-kerning normal
  color $textColor_default
  min-width $width_base
  text-align justify
  word-wrap break-word
  overflow-wrap break-word
  overflow-x hidden

  +retina-query(only screen, 2)
    -webkit-font-smoothing antialiased


a
  color $textColor_link
  transition: all 300ms ease
  text-decoration none
  background-color rgba($bgColor_link, 0.4)

  &:hover
    text-decoration underline