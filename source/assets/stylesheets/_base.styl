@import 'kouto-swiss'

@import '_config'

font-face( 'ProximaNova', '../fonts/ProximaNova-Semibold', normal, normal, formats: eot woff ttf )
font-face( 'ProximaNova', '../fonts/ProximaNova-Semibold-Italic', normal, italic, formats: eot woff ttf )
font-face( 'ProximaNova', '../fonts/ProximaNova-Bold', bold, normal, formats: eot woff ttf )
font-face( 'Noto Sans Japanese', '../fonts/NotoSansJP-Medium', normal, normal, formats: eot woff )

normalize()
box-sizing-reset()

body
  font-family 'ProximaNova', 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, Arial, 'Noto Sans Japanese', 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', 'メイリオ', Meiryo, sans-serif
  font-size $fontSize_default
  line-height $lineHeight_default
  letter-spacing $letterSpacing_default
  background-color $bgColor_default
  font-kerning normal
  color $textColor_default
  min-width $width_base

  +retina-query(only screen, 2)
    -webkit-font-smoothing antialiased


a
  color $textColor_link
  transition: all 300ms ease
  text-decoration none

  &:hover
    opacity 0.7